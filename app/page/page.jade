doctype html

html(data-ng-app='csm')
    head
        block title

        meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")
        script(type='application/javascript' src='/lib/fastclick/lib/fastclick.js')
        script(src='/lib/underscore/underscore.js', type='text/javascript')
        script(src='/lib/jquery/dist/jquery.js', type='text/javascript')
        script(src="/lib/momentjs/moment.js" type="text/javascript")

        script(src='/lib/angular/angular.js', type='text/javascript')
        script(src='/lib/angular-animate/angular-animate.js', type='text/javascript')
        script(src="/lib/angular-strap/dist/angular-strap.js", type='text/javascript')
        script(src="/lib/angular-strap/dist/angular-strap.tpl.js", type='text/javascript')

        link(href='/lib/bootstrap/dist/css/bootstrap.css', rel='stylesheet')

        script(src='/page/page.js', type='text/javascript')

        link(href='/page/page.css', rel='stylesheet')
        link(href='/widgets/common.css', rel='stylesheet')
        link(href='/widgets/loading.css', rel='stylesheet')
        link(href='/widgets/forms.css', rel='stylesheet')

        block headers
    body(ng-controller="loadingCtrl")
        block contents
        .overlay(ng-if="isLoading()")
            include /widgets/loading
