extends /page/page

block title
    title Roster - CSM

block headers
    script(src='./view.js', type='text/javascript')
    script(src='/app/router.js', type='text/javascript')
    script(src='./roster.js', type='text/javascript')
    script(src='./model.js', type='text/javascript')
    script(src='./login.js', type='text/javascript')
    script(src='./setMachineName.js', type='text/javascript')
    script(src='/db/client.js' type='text/javascript')
    script(src='/survey/client.js' type='text/javascript')

    link(href='../styles/widgets/dialogs.css', rel='stylesheet')
    link(href='../styles/sections/contact.css', rel='stylesheet')
    link(href='../styles/sections/roster.css',  rel='stylesheet')
    link(href='../styles/header.css',  rel='stylesheet')
    link(href='../styles/font-awesome/scss/font-awesome.css', rel='stylesheet')

block contents
    .overlay(ng-controller="rosterViewCtrl")
        .overlay(ng-switch="mode()")
            .overlay(ng-switch-when="setMachine")
                include setMachineName
            .overlay(ng-switch-when="login")
                include login
            .overlay(ng-switch-when="roster")
                include roster
